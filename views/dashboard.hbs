<div class="page-content">
	<div class="page-row">
		<div class="widget" id="widget-23">
			<div class="card text-center h-100">
				<div class="card-header top-stuff">
					<h4>Your Profile</h4>
				</div>
				<div class="card-body bottom-stuff">
					<p>Welcome </p>
					<P>Email: </p>
				</div>
			</div>
		</div>

		<div class="widget" id="widget-13">
			<div class='card top-stuff h-100 text-center'>
				<div class="card-header">
					<h4>Top Genres</h4>
				</div>
				<div class="card-body">
						<div class="chart-container" id="widget-13">
						<canvas id="doughnut-chart" style:"width: 100% height: 100%"></canvas>
					</div> 
				</div>
			</div>
		</div>

	</div>

	<div class="page-row">
		<div class="widget" id='widget-13' >
			<div class='card top-stuff h-100 text-center'>
				<div class="card-header">
					<h4>Top Tracks</h4>
				</div>
				<div class="card-body">
					<div class=" btn-group container-fluid" role="tracks-time" aria-label="Time range for top tracks">
						<button type="button" class="btn btn-outline-primary top-buttons">Weeks</button>
						<button type="button" class="btn btn-outline-primary top-buttons">Months</button>
						<button type="button" class="btn btn-outline-primary top-buttons">Years</button>
					</div>
					<ol class="card-text top-texts text-center">
						<li>Track 1</li>
						<li>Track 2</li>
						<li>Track 3</li>
						<li>Track 4</li>
						<li>Track 5</li>
					</ol>
				</div>
			</div>
		</div>

		<div class="widget" id="widget-13">
			<div class='card top-stuff h-100 text-center'>
				<div class="card-header">
					<h4>Top Albums</h4>
				</div>
				<div class="card-body">
					<div class="btn-group container-fluid " role="tracks-time" aria-label="Time range for Top Albums">
						<button type="button" class="btn btn-outline-primary top-buttons">Weeks</button>
						<button type="button" class="btn btn-outline-primary top-buttons">Months</button>
						<button type="button" class="btn btn-outline-primary top-buttons">Years</button>
					</div>
					<ol class="card-text top-texts">
						<li>Album 1</li>
						<li>Album 2</li>
						<li>Album 3</li>
						<li>Album 4</li>
						<li>Album 5</li>
					</ol>
				</div>
			</div>
		</div>

		<div class="widget" id="widget-13">
			<div class='card top-stuff h-100 text-center'>
				<div class="card-header">
					<h4>Top Artists</h4>
				</div>
				<div class="card-body">
					<div class="btn-group container-fluid " role="tracks-time" aria-label="Time range for Top Albums">
						<button type="button" class="btn btn-outline-primary top-buttons">Weeks</button>
						<button type="button" class="btn btn-outline-primary top-buttons">Months</button>
						<button type="button" class="btn btn-outline-primary top-buttons">Years</button>
					</div>
					<ol class="card-text top-texts">
						{{#each spotifyInfo.topArtistsShort}}											
							<li>{{this.name}}</li>
						{{/each}}
					</ol>
				</div>
			</div>
		</div>


	</div>

	<div class="page-row">
		<div class="widget" id="widget-33">
		</div>
	</div>

</div>


