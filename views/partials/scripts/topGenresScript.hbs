<script>
window.addEventListener('load', () => {
  var ctx = document.getElementById("doughnut-chart");

  var doughnut = new Chart(ctx, {
    type: "doughnut",
    data: {
      labels: {{{ spotifyInfo.topGenresChartData.labels }}}, // ["rock","modern rock","alternative rock","garage rock","electronica"],
      datasets: [
        {
          label: "Genres (%)",
          data: {{ spotifyInfo.topGenresChartData.data }},
          backgroundColor: [
            'rgba(255, 99, 132, 0.6)',
            'rgba(255, 159, 64, 0.6)',
            'rgba(255, 205, 86, 0.6)',
            'rgba(75, 192, 192, 0.6)',
            'rgba(54, 162, 235, 0.6)',
            'rgba(153, 102, 255, 0.6)',
            'rgba(201, 203, 207, 0.6)',
          ],
        },
      ],
    },

    //Config options
    options: {
      clip: 15,
      hoverOffset: 3,
      plugins: {
        legend: {
          position: "right",
          title: {
            color: "white",
            display: true,
            text: "Genres (%):",
          },
          labels: {
            color: "white",
          },
        },
      },
      animations: {
        tension: {
          duration: 1000,
          easing: "linear",
          from: 1,
          to: 0,
          loop: true,
        },
      },
      maintainAspectRatio: false,
    },
  });
