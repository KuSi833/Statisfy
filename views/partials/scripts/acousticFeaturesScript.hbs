                                returnValue.push(descriptions[tooltipItem.label]);
                                return returnValue;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        ticks: {
                            color: 'rgb(256,256,256)',
                        },
                    },
                    x: {
                        ticks: {
                            color: 'rgb(256,256,256)',
                        },
                    },
                },
                maintainAspectRatio: false,
                indexAxis: 'y'
            },
        });
