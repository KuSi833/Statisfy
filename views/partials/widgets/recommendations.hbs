<div class="widget top_widgets col-12 col-lg-4" id='recommendations_widget' >
    <div class='card h-100 small'>
        <div class="card-header text-center">
            <h4>Recommendations</h4>
        </div>
        <div class="card-body">
            <div class=" btn-group container-fluid" role="tracks-time" aria-label="Time range for top tracks">
                <button onclick = "makeActive(0, '#recommendations_widget')" type="button" class="btn btn-outline-primary top-buttons">Artists</button>
                <button onclick = "makeActive(1, '#recommendations_widget')" type="button" class="btn btn-outline-primary top-buttons">Songs</button>
                <button onclick = "makeActive(2, '#recommendations_widget')" type="button" class="btn btn-outline-primary top-buttons">Genres</button>
            </div>
            
            <div class="scrollable"> 
                <div id = "artists" class = "card-text" style="padding-top: 10px; padding-left: 45px; display:none">
                    {{#each spotifyInfo.recommendationsA}}
                        <p><img src="{{{this.album.images.2.url}}}" width="50" height="50"><a style="font-size: 20px; padding-left: 10px; color:white; text-decoration: none;" href = {{{this.external_urls.spotify}}}>{{this.name}} - {{this.artists.0.name}}</a></p>
                    {{/each}}
                    
                </div>
                <div id = "tracks" class = "card-text" style="padding-top: 10px; padding-left: 45px; display:none">
                    {{#each spotifyInfo.recommendationsT}}
                        <p><img src="{{{this.album.images.2.url}}}" width="50" height="50"><a style="font-size: 20px; padding-left: 10px; color:white; text-decoration: none;" href = {{{this.external_urls.spotify}}}>{{this.name}} - {{this.artists.0.name}}</a></p>
                    {{/each}}
                    
                </div>
                <div id = "genres" class = "card-text" style="padding-top: 10px; padding-left: 45px; display:none">
                    {{#each spotifyInfo.recommendationsG}}
                        <p><img src="{{{this.album.images.2.url}}}" width="50" height="50"><a style="font-size: 20px; padding-left: 10px; color:white; text-decoration: none;" href = {{{this.external_urls.spotify}}}>{{this.name}} - {{this.artists.0.name}}</a></p>
                    {{/each}}
        
                </div>
                
            </div>

            <button type="button" id="createPlaylist" class="btn btn-outline-primary top-buttons" style="margin-left:110px"> &#10133; Create Playlist</button>
        </div>
    </div>
</div>

<script>
    window.addEventListener('load', () => {
        makeActive(0, '#recommendations_widget');
    })
</script>
