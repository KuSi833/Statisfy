<div class="widget top_widgets col-12 col-lg-4" id='allGenres_widget' >
    <div class='card'>
        <div class="card-header text-center">
            <h4>All Genres</h4>
        </div>
        <div class="card-body">
            <div class="scrollable">
                <div class = "card-text">
                    {{#each spotifyInfo.genresArray}}
                        <div class="entry">
                            <p>{{ inc @index }}. {{ this.[0] }}</p>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
